  hs-source-dirs:       test
  ghc-options:          -Wall
  main-is:              Test.hs
  Type:                 exitcode-stdio-1.0
  default-language:     Haskell2010
  build-depends:         base >=4.7 && <4.8, Cabal >= 1.16.0
                        , learning-haskell
                        , HUnit
                        , hspec
                        , QuickCheck
                        , smallcheck
