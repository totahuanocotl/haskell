executable test-learning-haskell
  hs-source-dirs:       test
  ghc-options:          -Wall
  main-is:              Test.hs
  default-language:     Haskell2010
  build-depends:        base >=4.7 && <4.8, Cabal >= 1.16.0
                        , learning-haskell
                        , HUnit
                        , hspec
                        , QuickCheck
                        , smallcheck
                        , tasty
                        , tasty-hunit
                        , tasty-hspec
                        , tasty-quickcheck
                        , tasty-smallcheck
